{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-half">
                <h1>Register</h1>

                {% if errors is defined %}
                    {% for error in errors %}
                        <div class="alert alert-danger" role="alert">{{ error.message }}</div>
                    {% endfor %}
                {% endif %}

                {% import "components/form.macro.html.twig" as form %}
                <form action="{{ path('register') }}" method="post">
                    {{ form.input('email', 'Email', {'placeholder': 'Your email', 'required': 'required'}) }}
                    {{ form.input('password', 'Password', {'type': 'password', 'placeholder': 'Your password', 'required': 'required'}) }}
                    {{ form.checkbox('aggrement', 'I agree to the <a href="/">terms and conditions</a>', {'required': 'required'}) }}
                    <div class="field">
                        <div class="control">
                            <button class="button is-link is-outlined" type="submit">Sign up</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

