{% extends '@FOSUser/layout.html.twig' %}

{% block page_title %}{{ 'layout.resetting'|trans }}{% endblock %}

{% block wrapper %}
<div class="row justify-content-center">
    <div class="col-12 col-lg-6">

        <div class="card card-horizontal">
            <div class="card-header card-header-img" style="background-image: url('{{ asset('build/images/background13.jpg') }}');"></div>
            <div class="card-body">
                <section class="content">
                    <h2 class="card-title section-title">{{ 'layout.resetting'|trans }}</h2>

                    <p>{{ 'resetting.request.description' | trans | raw }}</p>

                    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                        <div class="form-group row">
                            <div class="col">
                                <input type="text" id="username" name="username" class="form-input primary" required="required" placeholder="{{ 'resetting.request.username'|trans) }}"/>
                            </div>
                        </div>

                        <div class="form-group field-button">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">{{ 'resetting.reset.submit'|trans }}</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
{% endblock %}