{% extends '@FOSUser/layout.html.twig' %}

{% block page_title %}{{ 'layout.resetting'|trans }}{% endblock %}

{% block wrapper %}
<div class="row justify-content-center">
    <div class="col-12 col-lg-6">

        <div class="card card-horizontal">
            <div class="card-header card-header-img" style="background-image: url('{{ asset('build/images/background13.jpg') }}');"></div>
            <div class="card-body">
                <section class="content">
                    <h2 class="card-title section-title">{{ 'layout.resetting'|trans }}</h2>

                    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}) }) }}

                    <div class="form-group row">
                        <div class="col">
                            {{ form_errors(form.plainPassword.first) }}
                            {{ form_widget(form.plainPassword.first, {'attr': { 'placeholder': 'form.new_password'|trans }}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col">
                            {{ form_errors(form.plainPassword.second) }}
                            {{ form_widget(form.plainPassword.second, {'attr': { 'placeholder': 'form.new_password_confirmation'|trans }}) }}
                        </div>
                    </div>

                    <div class="form-group field-button">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">{{ 'resetting.reset.submit'|trans }}</button>
                    </div>
                    {{ form_end(form) }}
                </section>
            </div>
        </div>
    </div>
</div>
{% endblock %}