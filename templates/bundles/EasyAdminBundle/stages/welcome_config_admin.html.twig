{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Welcome to EasyAdmin 3' %}

{% block page_content %}
    <style>
        p { max-width: 600px; }
    </style>

    <p>
        <strong>Welcome to Nurschool!</strong>
    </p>

    <p>
        You must config your user account.
    </p>

    {% form_theme form '@EasyAdmin/crud/form_theme.html.twig' %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.address) }}
    {{ form_row(form.logoFile) }}
    {{ form_row(form.nurses) }}

    <a class="btn btn-primary" href="{{ path('welcome_stage', { 'stage': 'complete' }) }}">
        <span class="btn-label">Salta</span>
    </a>

    <button class="btn btn-primary" type="submit" value="next">
        <span class="btn-label">Continuar</span>
    </button>

    {{ form_end(form) }}

{% endblock %}
