
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="section">
            <div class="columns is-centered">
                <div class="column is-half">
                    {% if error %}
                        <div class="notification is-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path('login') }}" method="post">

                        <div class="field">
                            <label for="username">Email</label>
                            <div class="control has-icons-left">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input"
                                       placeholder="Your email" autocomplete="email" required autofocus>
                                <span class="icon is-small is-left">
                                    <i class="icon-envelop"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                                <input type="password" name="password" id="inputPassword" class="input"
                                       placeholder="Your password" autocomplete="current-password" required>
                                <span class="icon is-small is-left">
                                    <i class="icon-lock"></i>
                                </span>
                                <a href="#" class="icon is-small is-right">
                                    <i class="icon-eye-blocked"></i>
                                </a>
                            </p>
                        </div>
                        <div class="field">
                            <input id="remember_me" type="checkbox" name="_remember_me" class="is-checkradio is-link">
                            <label for="remember_me">Keep me logged in</label>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="field">
                            <div class="control">
                                <button type="submit" class="button is-link is-outlined">Log in</button>
                            </div>
                        </div>
                    </form>

                    <div>
                        <div class="divider">{{ 'or' | trans }}</div>
                    </div>

                    {% include 'components/social/sign-in-social.html.twig' only %}

                </div>
            </div>
        </div>
    </div>
{% endblock body %}